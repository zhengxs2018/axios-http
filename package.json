{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "npm run build:dts",
    "build": "ts-node ./scripts/build.ts --mode=production",
    "build:dts": "tsc --build ./tsconfig.dts.json",
    "clean": "ts-node ./scripts/clean.ts",
    "test": "jest --runInBand",
    "lint": "eslint . --ext [js,ts,tsx] --ignore-path .gitignore --cache --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|vue|md|scss)\"",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:build-typedoc": "typedoc --options typedoc.json",
    "docs:release": "npm run docs:build && npm run docs:build-typedoc && gh-pages -d ./docs/.vuepress/dist"
  },
  "workspaces": [
    "packages/**"
  ],
  "dependencies": {
    "@endemolshinegroup/cosmiconfig-typescript-loader": "^3.0.2",
    "@lerna/filter-packages": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "cosmiconfig": "^7.0.1",
    "del": "^6.0.0",
    "esbuild": "^0.14.11",
    "gh-pages": "^3.2.3",
    "lodash": "^4.17.21",
    "moxios": "^0.4.0",
    "mri": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vuepress/plugin-pwa": "^2.0.0-beta.32",
    "@vuepress/plugin-pwa-popup": "^2.0.0-beta.32",
    "@vuepress/plugin-search": "^2.0.0-beta.32",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.2",
    "vuepress": "^2.0.0-beta.32"
  },
  "author": {
    "name": "zhengxs2018",
    "email": "zhengxs2018@foxmail.com"
  },
  "license": "MIT"
}
