{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": ["**/*.md"],
      "message": "release %s"
    },
    "publish": {
      "ignoreChanges": ["*.md"],
      "registry": "https://registry.npmjs.com/"
    }
  }
}
